#!/usr/bin/env ruby

abort 'Usage: blogpost "the post title"' unless ARGV.length == 1

date_prefix = Time.now.strftime("%Y-%m-%d")
postname = ARGV.first.strip.downcase.gsub(/ /, '-')
post = "/Users/ben/Sites/benhoskin.gs/current/_posts/#{date_prefix}-#{postname}.markdown"

unless File.exists? post
  File.open(post, 'w') {|f|
    f << %Q{---
layout: post
title: "#{ARGV.first}"
---


}
  }
end

%x{mate -a -l 6 '#{post}'}
